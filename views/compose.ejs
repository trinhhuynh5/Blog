<%- include("partials/header") -%>

    <h1>Compose</h1>
    <form class="" action="/compose" method="post">
        <div class="form-group">
            <input class="form-control" type="text" name="postTitle" placeholder="Title" autocomplete="off">
        </div>
        <div class="form-group">
            <textarea class="form-control" name="postBody" rows="8" cols="80" placeholder="Write your post here..."></textarea>
        </div>
        <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </form>

